                </thead>
                <tbody>
                    <%if @property %>
                        <tr>
                            <td><%= @property.name %> </a> </td>
                            <td><%= @property.address %> </a> </td>
                            <td><%= @property.square_feet %> </a> </td>
                            <td><%= @property.max_num_tenants%> </td>
                            <td><%= @property.curr_num_tenants%> </td>
                            <td><%= @property.monthly_rent %> </td>
                            <td><%= @property.notes %> </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
