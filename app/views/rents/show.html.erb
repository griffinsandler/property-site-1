<html>
    <% if session[:check] == 1 %>
        <%= render '/layouts/manager_nav_bar' %>
    <% else %>
        <%= render '/layouts/tenant_nav_bar' %>
    <% end %>
    <body>
        <div class= "container">
            <div class = "row">
                <div class = "col s12">
                    <% if session[:check] == 1 %>
                        <div class = "card teal lighten-2">
                    <% else %> 
                        <div class = "card orange darken-4">
                    <% end %>
                        <span class = "card-title white-text" style = "padding:5px;">Rent</span>
                        <div class = "card-content black-text white">
                          <thead>
                            <th>Address</th>
                            <th>Rent Amount</th>
                            <th>Amount Left to Pay</th>
                            <th>Due By</th>
                        </thead>
                        <tbody>
                             <% @properties.each do |t| %>
                                 <% @propRents[t].each do |r| %>
                                    <tr>
                                        <td><%= t.address %></td>
                                        <td><%= t.monthly_rent %></td>
                                        <td><%= r.total %></td>
                                        <td><%= r.due.month %>/<%= r.due.day %>/<%= r.due.year %></td>
                                    </tr>
                                <% end %>
                            <% end %>
                        </tbody>
                    </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>